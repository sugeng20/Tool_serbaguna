  <section>
    <div class="container">
      <div class="row">
        <div class="col text-center mt-4">
          <h2>Persegi</h2>
          <hr>
          <img src="../img/bangun_datar/persegi.png" alt="rumus persegi" width="200">
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col-8 mt-4">
          <h4>Definisi : </h4>
          <p class="ml-4">Persegi adalah bangun datar dua dimensi yang dibentuk oleh empat buah rusuk yang sama panjang
            dan memiliki empat buah sudut siku-siku.</p>
          <h4>Sifat-Sifat : </h4>
          <p class="ml-4">
            <ul>
              <li>Mempunyai 4 titik sudut.</li>
              <li>Mempunyai 4 sudut siku-siku 90⁰.</li>
              <li>Mempunyai 2 diagonal yang sama panjang.</li>
              <li>Mempunyai 4 simetri lipat.</li>
              <li>Mempunyai 4 simetri putar.</li>
            </ul>
          </p>
          <h4>Rumus :</h4>
          <p>
            <ul>
              <li>Keliling : 4 X S </li>
              <li>Luas : S X S (s<sup>2</sup>)</li>
            </ul>
            Keterangan :
            <ul>
              <li>S = Sisi</li>
            </ul>
          </p>
        </div>
      </div>
    </div>
  </section>
  <!-- Akhir Persegi -->

  <!-- Menghitung Rumus Persegi -->
  <section class="bg-light">
    <div class="container">
      <div class="row">
        <div class="col text-center mt-4">
          <h2>Menghitung Rumus Persegi</h2>
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col-md-4 mt-4">
          <h4>1. Menghitung Keliling</h4>
          <p>Rumus : 4 X S</p>
          <p>
            <form action="/kPersegi" id="formK" method="POST">
              <Label>Masukan sisi (Cm)</Label>
              <input type="text" name="sisi" id="sisi" class="form-control">
              <label for="hasilK">Hasil :</label>
              <input type="text" name="hasilL" id="hasilK" class="form-control mt-2" disabled>
              <button type="submit" class="btn btn-primary mt-4">Hitung</button>
              <button type="submit" class="btn btn-danger mt-4" onclick="reset()">Reset</button>
            </form>
          </p>
        </div>
        <div class="col-md-3 mt-4">
          <h4>2. Menghitung Luas</h4>
          <p>Rumus : S X S (S<sup>2</sup> )</p>
          <p>
            <form action="/lPersegi" id="formL" method="POST">
              <Label>Masukan sisi (Cm)</Label>
              <input type="text" name="sisi" id="sisi" class="form-control">
              <label for="hasilL">Hasil : </label>
              <input type="text" name="hasilL" id="hasilL" class="form-control mt-2" disabled>
              <button type="submit" class="btn btn-primary mt-4">Hitung</button>
              <button type="submit" class="btn btn-danger mt-4" onclick="reset()">Reset</button>
            </form>
          </p>
        </div>
      </div>
    </div>
  </section>
